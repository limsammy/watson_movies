<%if query.present?%>
  <% if movies.present?%>
    <h3> Results for <%= query %></h3>
      <% movies.each do |item| %>
        <div>
          <p>
          <%= image_tag "https://image.tmdb.org/t/p/w500"+ "#{item.poster_path}",size: "192x172" %>
          </p>
          <p>
            Title: <%= item.title%>
          </p>
          <p>
            Overview: <%= item.overview%>
          </p>
          <p>
            Populatity: <%= item.popularity%>
          </p>
          <p>
            Adult: <%= item.adult%>
          </p>
          <p>
            <b>Reviews:</b>
            <br>
            <% if Tmdb::Movie.reviews(item.id).total_results == 0 %>
              <i>No reviews found</i>
            <% else %>
              <% Tmdb::Movie.reviews(item.id).results.each do |review| %>
                <b>Author:</b> <%= review.author %><br>
                <b>Content:</b> <%= review.content %>
                <br>
                <br>
              <% end %>
            <% end %>
          </p>
        </div>
            <hr>
      <%end%>
  <%else%>
    <p>
      No results found
    </p>
  <%end%>
<%end%>
